generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id
  title     String
  bannerUrl String
}

model Ad {
  id              String   @id
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now())
}
